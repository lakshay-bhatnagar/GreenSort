<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111722"
    tools:context=".quizzes.WasteManagementQuiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CardView for Question 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#1F2C3A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/question1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is the main cause of global warming?"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radioGroupQuestion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/option1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deforestation"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fossil fuels"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overpopulation"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option1_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None of the above"
                        android:textColor="@android:color/white" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Question 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#1F2C3A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Which of these is a renewable energy source?"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radioGroupQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/option2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coal"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solar energy"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Natural gas"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option2_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nuclear energy"
                        android:textColor="@android:color/white" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Question 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#1F2C3A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/question3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What practice can help reduce water pollution?"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radioGroupQuestion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/option3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Using plastic bottles"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proper waste disposal"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option3_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ignoring chemical spills"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option3_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None of the above"
                        android:textColor="@android:color/white" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Question 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#1F2C3A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/question4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What type of waste can be composted?"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radioGroupQuestion4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/option4_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plastic"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option4_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food scraps"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option4_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glass"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option4_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batteries"
                        android:textColor="@android:color/white" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Question 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#1F2C3A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/question5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Which of the following is a sustainable practice?"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radioGroupQuestion5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/option5_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overfishing"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option5_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recycling"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option5_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Using single-use plastic"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/option5_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burning fossil fuels"
                        android:textColor="@android:color/white" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Submit"
            android:backgroundTint="@color/teal_200"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
